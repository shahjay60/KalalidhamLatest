@model Kalalidham.Models.User
@{
    ViewBag.Title = "Index";
}
<style>
    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #fccb90;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
    }
</style>
<!-- Section: Design Block -->
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp" style="width: 185px;" alt="logo">
                                </div>

                                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                                {
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "UserName" })
                                        <label class="form-label" for="form2Example11">Username</label>
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                        <label class="form-label" for="form2Example22">Password</label>
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                                    </div>

                                    <div class="form-outline mb-4">
                                        @Html.CheckBoxFor(m => m.RememberMe)
                                        Remember Me
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <input type="submit" value="Login" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"/>
                                        <a class="text-muted" href="#!">Forgot password?</a>
                                    </div>

                                    <p>ViewBag.ErrorMessage</p>
                                }
                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a company</h4>
                                <p class="small mb-0">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Section: Design Block -->